{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "valgrind",
            "type": "shell",
            "command": "valgrind",
            "args": [
                "--leak-check=full",
                "--show-leak-kinds=all",
                "--track-origins=yes",
                "--verbose",
                "${workspaceFolder}/webserv",
                "${workspaceFolder}/configs/default.conf"
            ],
            "problemMatcher": []
        }
    ]
}
